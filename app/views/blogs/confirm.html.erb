<h3>以下の内容で送信する</h3>
<%= form_with(model: @blog, local: true) do |form| %>
  <% if @blog.image && @blog.image.url %>
    <%= image_tag(@blog.image.url) %>
  <% end %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <p>本文：<%= @blog.content %></p>
  <%= form.submit "登録する" %>
<% end %>
<%= form_with(model:@blog, url:blogs_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
