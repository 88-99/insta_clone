<p id="notice"><%= notice %></p>

<h1>一覧</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.image %></td>
        <td><%= blog.user %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細を見る', blog_path(blog.id) %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to '新しく投稿する', new_blog_path %>
